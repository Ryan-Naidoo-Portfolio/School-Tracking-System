@model test_Data.Models.UserModel
@{
    ViewData["Title"] = "Add Users";

    List<UserModel> users = TempData["users"] as List<UserModel>;
}
<div class="container">
    <form action="/Home/AddUsers" method="post">
        <div class="form-group">
            <label>Email address</label>
            <input type="email" placeholder="Enter email" asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Name</label>
            <input type="text" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Username</label>
            <input type="text" asp-for="UserName"/>
        <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    <div class="form-group">
        <label>Password</label>
        <input type="text" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>


<div class="container" style="margin-top: 50px;">
    @if(users!= null && users.Count>=1)
    {
    <form action="/Home/SearchUser" method="post">
        <div class="form-group">
            <label>Search</label>
            <input type="text" name="searchTerm" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
        <table class="table table-dark">
            <thead>
                <tr>
                    Login Table
                    <th scope="col">Name</th>
                    <th scope="col">Password</th>
                    <th scope="col">UserName</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
             @foreach (var user in users)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Password</td>
                        <td>@user.UserName</td>
                        <td>
                            <form asp-action="UpdateUser" asp-controller="Home" method="post">
                                <input type="hidden" asp-for="Id" value="@user.Id"/>
                                <button type="submit" class="btn btn-success">Update</button>
                            </form>
                        </td>
                        <td>
                            <form asp-action="DeleteUser" asp-controller="Home" method="post">
                                <input type="hidden" asp-for="Id" value="@user.Id" />
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }

            </tbody>

        </table>
        
    }

    </div>
