@model test_Data.Models.ChildModel
@{
    ViewData["Title"] = "UpdateChild";
    ChildModel user = TempData["userTemp"] as ChildModel;
}
<h1>Update User</h1>
<div class="container">
    <form action="/home/UpdateChildFinal" method="post">
        <input type="hidden" asp-for="Id" value="@user.Id"/>
        <div class="form-group">
            <label>Name</label>
            <input type="text" placeholder="Enter Name" asp-for="Name" value = "@user.Name">
            
        </div>
        <div class="form-group">
            <label>Surname</label>
            <input type="text" asp-for="Surname" value="@user.Surname">
            
        </div>
        <div class="form-group">
            <label>FormClass</label>
            <input type="text" asp-for="FormClass" value="@user.FormClass" />
            
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>