@model test_Data.Models.AttendanceModel
@{
    ViewData["Title"] = "Update Attendance";
    AttendanceModel user = TempData["userTemp"] as AttendanceModel;
}

<style>
    body {
        background-color: white        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    .form-container {
        max-width: 500px;
        width: 100%;
        padding: 30px;
        background-color: rgba(255, 255, 255, 0.8);
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(10px);
        margin: 20px auto;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 10px;
        border: 1px solid #ccc;
        font-size: 1rem;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .btn-primary {
        width: 100%;
        border-radius: 10px;
        padding: 10px;
        font-size: 1rem;
        background-color: #007bff;
        border: none;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    label {
        font-weight: bold;
        font-size: 1rem;
        margin-bottom: 5px;
        display: block;
    }

    .text-danger {
        font-size: 12px;
        color: #dc3545;
        margin-top: 5px;
        display: block;
    }

    .head-bar {
        background-color: #2248F0;
        color: white;
        text-align: center;
        padding: 10px;
        font-weight: bold; /* Make text bold */
        position: fixed; /* Fix the position */
        top: 0; /* Position at the top */
        left: 0; /* Align to the left */
        right: 0; /* Align to the right */
        z-index: 1000; /* Ensure it stays above other content */
    }
</style>

<body>
    <div class="head-bar">
        Admin: Update Attendance
    </div>
    <div class="form-container">
        <h1>Update Attendance</h1>
        <form action="/home/UpdateAttendanceFinal" method="post">
            <input type="hidden" asp-for="ID" value="@user.ID" />
            <div class="form-group">
                <label for="timeIn">TimeIn</label>
                <input type="text" id="timeIn" class="form-control" placeholder="Enter TimeIn" asp-for="atTimeIn" value="@user.atTimeIn">
                <span asp-validation-for="atTimeIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="timeOut">TimeOut</label>
                <input type="text" id="timeOut" class="form-control" asp-for="atTimeOut" value="@user.atTimeOut">
                <span asp-validation-for="atTimeOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="date">Date</label>
                <input type="text" id="date" class="form-control" asp-for="atDate" value="@user.atDate">
                <span asp-validation-for="atDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="present">Present</label>
                <input type="text" id="present" class="form-control" asp-for="atPresent" value="@user.atPresent">
                <span asp-validation-for="atPresent" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>
