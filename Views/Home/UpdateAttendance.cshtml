@model test_Data.Models.AttendanceModel
@{
    ViewData["Title"] = "Update Attendance";
    AttendanceModel user = TempData["userTemp"] as AttendanceModel;
}

<style>
    body {
        background-image: url('https://publichealthinsider.com/wp-content/uploads/2020/08/shutterstock_534419863-1555909105-1598646752360-1024x559.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    .form-container {
        max-width: 500px;
        width: 100%;
        padding: 30px;
        background-color: rgba(255, 255, 255, 0.8);
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(10px);
        margin: 20px auto;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 10px;
        border: 1px solid #ccc;
        font-size: 1rem;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .btn-primary {
        width: 100%;
        border-radius: 10px;
        padding: 10px;
        font-size: 1rem;
        background-color: #007bff;
        border: none;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    label {
        font-weight: bold;
        font-size: 1rem;
        margin-bottom: 5px;
        display: block;
    }

    .text-danger {
        font-size: 12px;
        color: #dc3545;
        margin-top: 5px;
        display: block;
    }
</style>

<body>
    <div class="form-container">
        <h1>Update Attendance</h1>
        <form action="/home/UpdateAttendanceFinal" method="post">
            <input type="hidden" asp-for="Id" value="@user.Id" />
            <div class="form-group">
                <label for="timeIn">TimeIn</label>
                <input type="text" id="timeIn" class="form-control" placeholder="Enter TimeIn" asp-for="TimeIn" value="@user.TimeIn">
                <span asp-validation-for="TimeIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="timeOut">TimeOut</label>
                <input type="text" id="timeOut" class="form-control" asp-for="TimeOut" value="@user.TimeOut">
                <span asp-validation-for="TimeOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="date">Date</label>
                <input type="text" id="date" class="form-control" asp-for="Date" value="@user.Date">
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="present">Present</label>
                <input type="text" id="present" class="form-control" asp-for="Present" value="@user.Present">
                <span asp-validation-for="Present" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>
