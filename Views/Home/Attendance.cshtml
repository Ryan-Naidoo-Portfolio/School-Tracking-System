@model test_Data.Models.AttendanceModel
@{
    ViewData["Title"] = "Attendance";
}
<style>
    body {
        background-image: url('https://publichealthinsider.com/wp-content/uploads/2020/08/shutterstock_534419863-1555909105-1598646752360-1024x559.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        margin: 0;
        font-family: Arial, sans-serif;
    }

    .Form {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        background-color: rgba(255, 255, 255, 0.9); /* Semi-transparent white background */
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.3); /* Subtle shadow */
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 10px;
        border: 1px solid #ccc;
        font-size: 1rem;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .btn-primary {
        width: 100%;
        border-radius: 10px;
        padding: 10px;
        font-size: 1rem;
        background-color: #007bff;
        border: none;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .table-dark {
        margin-top: 20px;
        background-color: rgba(0, 0, 0, 0.75);
        color: white;
    }

        .table-dark th,
        .table-dark td {
            text-align: center;
        }

    .btn-outline-danger {
        border: 1px solid #dc3545;
        color: #dc3545;
    }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: white;
        }
</style>

<body>
    <div class="Form">
        <form action="/home/attendance" method="post">
            <div class="form-group">                             
                <label for="timeIn">TimeIn</label>
                <input type="text" id="timeIn" class="form-control" placeholder="Enter TimeIn" asp-for="atTimeIn">
                <span asp-validation-for="atTimeIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="timeOut">TimeOut</label>
                <input type="text" id="timeOut" class="form-control" placeholder="Enter TimeOut" asp-for="atTimeOut">
                <span asp-validation-for="atTimeOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="date">Date</label>
                <input type="date" id="date" class="form-control" asp-for="atDate">
                <span asp-validation-for="atDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="present">Present</label>
                <select id="present" class="form-control" asp-for="atPresent">
                    <option value="" disabled selected>Select status</option>
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>
                </select>
                <span asp-validation-for="atPresent" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <div class="container">
        @if (ViewBag.users != null && ViewBag.users.Count >= 1)
        {
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">TimeIn</th>
                        <th scope="col">TimeOut</th>
                        <th scope="col">Date</th>
                        <th scope="col">Present</th>
                        <th scope="col">Update</th>
                        <th scope="col">Delete</th>
                        <th scope="col">Contact</th>
                      
                    </tr>
                </thead>
                <tbody>
                    @foreach (var attendance in ViewBag.users)
                    {
                        <tr>
                            <td>@attendance.atTimeIn</td>
                            <td>@attendance.atTimeOut</td>
                            <td>@attendance.atDate</td>
                            <td>@attendance.atPresent</td>
                            <td>
                                <form asp-action="UpdateAttendance" asp-controller="Home" method="post style="display:inline;">
                                    <input type="hidden" asp-for="ID" value="@attendance.ID" />
                                    <button type="submit" class="btn btn-success">Update</button>
                                </form>
                            </td>
                            <td>
                                <form asp-action="DeleteAttendance" asp-controller="Home" method="post style="display:inline;">
                                    <input type="hidden" asp-for="ID" value="@attendance.ID" />
                                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                                </form>
                            </td>
                            <td>
                                <form asp-action="Notification" asp-controller="Home" method="post style="display:inline;">
                                    <input type="hidden" asp-for="ID" value="@attendance.ID" />
                                    <button type="submit" class="btn btn-outline-danger">submit</button>
                                </form>
                            </td>
                          
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</body>
