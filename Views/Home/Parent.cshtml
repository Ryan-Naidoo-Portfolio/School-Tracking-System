@model test_Data.Models.ParentModel
@{
    ViewData["Title"] = "Parent";
}


@if (TempData["AlertMessage"] != null)
{
    <br />
    <br />
    <div class="alert alert-success">
        <strong>Success!</strong> @TempData["AlertMessage"]
    </div>
}
<style>
    body {
        background-color: white;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    .form-container {
        max-width: 500px;
        width: 100%;
        padding: 30px;
        background-color: rgba(255, 255, 255, 0.8);
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(10px);
        margin-bottom: 30px;
        margin-left: 200px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 100px;
        border-radius: 10px;
        border: 1px solid #ccc;
        font-size: 1rem;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .btn-primary {
        width: 200px;
        border-radius: 10px;
        padding: 10px;
        font-size: 1rem;
        margin-left: 100px;
        background-color: #007bff;
        border: none;
        color: #fff;
        margin: 20px auto; /* Center the button and add vertical margin */
        display: block; /* Ensure it takes the block level layout */
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-success {
        border-radius: 10px;
        padding: 10px;
        font-size: 1rem;
        background-color: #28a745;
        border: none;
        color: #fff;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-outline-danger {
        border-radius: 10px;
        padding: 10px;
        font-size: 1rem;
        border: 1px solid #dc3545;
        color: #dc3545;
        background-color: transparent;
    }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: #fff;
        }

    .table-dark {
        margin-top: 50px;
        background-color: rgba(0, 0, 0, 0.75);
        color: white;
    }

    .table-dark th,
    .table-dark td {
        text-align: center;
    }

    .btn-outline-danger {
        border: 1px solid #dc3545;
        color: #dc3545;
    }

    .btn-outline-danger:hover {
        background-color: #dc3545;
        color: white;
    }

    label {
        font-weight: bold;
    }

    .head-bar {
        background-color: #2248F0;
        color: white;
        text-align: center;
        padding: 10px;
        font-weight: bold; /* Make text bold */
        position: fixed; /* Fix the position */
        top: 0; /* Position at the top */
        left: 0; /* Align to the left */
        right: 0; /* Align to the right */
        z-index: 1000; /* Ensure it stays above other content */
    }
</style>

<body>
    <div class="head-bar">
        Admin: Parent Records
    </div>

    <div class="container">
        @if (ViewBag.users != null && ViewBag.users.Count >= 1)
        {
            <table class="table table-dark">
                <thead>
					<tr>
						<th scope="col">pID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Surname</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Spouse Name</th>
                        <th scope="col">Spouse Phone Number</th>
                        <th scope="col">Emergency Contact name</th>
                        <th scope="col">Emergency Contact Phone Number</th>
                        <th scope="col">acID</th>
                        <th scope="col">sID</th>
                        <th scope="col">Update</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var parent in ViewBag.users)
                    {
                        <tr>
                            <td>@parent.pID</td>
                            <td>@parent.pName</td>
                            <td>@parent.pSurname</td>
                            <td>@parent.pPhoneNumber</td>
                            <td>@parent.pSpouseName</td>
                            <td>@parent.pSpousePhoneNumber</td>
                            <td>@parent.pEmergencyContactName</td>
                            <td>@parent.pEmergencyPhoneNumber</td>
                            <td>@parent.acID</td>
                            <td>@parent.sID</td>
                            <td>
                                <form asp-action="UpdateParent" asp-controller="Home" method="post">
                                    <input type="hidden" asp-for="pID" value="@parent.pID" />
                                    <button type="submit" class="btn btn-success">Update</button>
                                </form>
                            </td>
                            <td>
                                <form asp-action="DeleteParent" asp-controller="Home" method="post" class="mt-2">
                                    <input type="hidden" asp-for="pID" value="@parent.pID" />
                                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
    <form asp-action="AddParentsDetails" asp-controller="Home" method="post">
        <button type="submit" class="btn btn-primary">Add Parents Details</button>
    </form>
</body>
