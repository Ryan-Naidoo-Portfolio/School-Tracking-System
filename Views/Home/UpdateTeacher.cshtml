@model test_Data.Models.TeacherModel
@{
    ViewData["Title"] = "Update Teacher";
    TeacherModel user = TempData["userTemp"] as TeacherModel;
}

<style>
    body {
        background-image: url('https://publichealthinsider.com/wp-content/uploads/2020/08/shutterstock_534419863-1555909105-1598646752360-1024x559.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        margin: 0;
        font-family: Arial, sans-serif;
    }

    .form-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        background-color: rgba(255, 255, 255, 0.9); /* Semi-transparent white background */
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.3); /* Subtle shadow */
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 10px;
        border: 1px solid #ccc;
        font-size: 1rem;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .btn-primary {
        width: 100%;
        border-radius: 10px;
        padding: 10px;
        font-size: 1rem;
        background-color: #007bff;
        border: none;
        color: #fff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    label {
        font-weight: bold;
    }
</style>

<body>
    <div class="form-container">
        <h1>Update Teacher</h1>
        <form action="/home/UpdateTeacherFinal" method="post">
            <input type="hidden" asp-for="Id" value="@user.Id" />

            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" id="name" class="form-control" placeholder="Enter Name" asp-for="Name" value="@user.Name" />
            </div>

            <div class="form-group">
                <label for="surname">Surname</label>
                <input type="text" id="surname" class="form-control" placeholder="Enter Surname" asp-for="Surname" value="@user.Surname" />
            </div>

            <div class="form-group">
                <label for="formClass">Form Class</label>
                <input type="text" id="formClass" class="form-control" placeholder="Enter Form Class" asp-for="FormClass" value="@user.FormClass" />
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>
