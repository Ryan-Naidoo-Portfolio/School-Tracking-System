@model test_Data.Models.ChildModel
@{
    ViewData["Title"] = "Child";
}

@if (TempData["AlertMessage"] != null)
{
    <br />
    <br />
    <div class="alert alert-success">
        <strong>Success!</strong> @TempData["AlertMessage"]
    </div>
}
<style>
    body {
        background-color: white;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        margin: 0;
        font-family: Arial, sans-serif;
    }

    .form-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 10px;
        border: 1px solid #ccc;
        font-size: 1rem;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .btn-primary {
        width: 100%;
        border-radius: 10px;
        padding: 10px;
        font-size: 1rem;
        background-color: #007bff;
        border: none;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .table-dark {
        margin-top: 60px;
        background-color: rgba(0, 0, 0, 0.75);
        color: white;
    }

        .table-dark th,
        .table-dark td {
            text-align: center;
        }

    .btn-outline-danger {
        border: 1px solid #dc3545;
        color: #dc3545;
    }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: white;
        }

    label {
        font-weight: bold;
    }

    .head-bar {
        background-color: #2248F0;
        color: white;
        text-align: center;
        padding: 10px;
        font-weight: bold; /* Make text bold */
        position: fixed; /* Fix the position */
        top: 0; /* Position at the top */
        left: 0; /* Align to the left */
        right: 0; /* Align to the right */
        z-index: 1000; /* Ensure it stays above other content */
    }
</style>

<body>
    <div class="head-bar">
        View Student Records
    </div>
    <div class="container">
     

        @if (ViewBag.users != null && ViewBag.users.Count >= 1)
        {
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">sID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Surname</th>
                        <th scope="col">Form Class</th>
                        <th scope="col">pID</th>
            
                        <th scope="col">Generate</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var child in ViewBag.users)
                    {
                        <tr>
                            <td>@child.sID</td>
                            <td>@child.sName</td>
                            <td>@child.sSurname</td>
                            <td>@child.sFormClass</td>
                            <td>@child.pID</td>
                           
                            <td>
                                <button type="button" class="btn btn-info" onclick="pushSIDToTextArea('@child.sID')">Generate</button>
                            </td>
                            <td>
                                <form asp-action="DeleteChild" asp-controller="Home" method="post" style="display:inline;">
                                    <input type="hidden" asp-for="sID" value="@child.sID" />
                                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

          
        }
    </div>
    <script>
        function pushSIDToTextArea(sID) {
            // Store the sID in local storage (to share between views)
            localStorage.setItem('selectedSID', sID);

            // Redirect to the page where you have the QR code form
            window.location.href = '@Url.Action("qrgen", "Home")';
        }
    </script>
</body>
