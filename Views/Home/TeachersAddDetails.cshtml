@model test_Data.Models.TeacherModel
@{
    ViewData["Title"] = "TeachersAddDetails";
}

<style>
    body {
        background-color: white;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        margin: 0;
        font-family: Arial, sans-serif;
    }

    .form-container {
        max-width: 600px;
        width: 100%;
        margin: 50px auto;
        padding: 30px;
        background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent white background */
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.3); /* Subtle shadow */
        backdrop-filter: blur(10px); /* Frosted glass effect */
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 10px;
        border: 1px solid #ccc;
        font-size: 1rem;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .btn-primary {
        width: 100%;
        border-radius: 10px;
        padding: 10px;
        font-size: 1rem;
        background-color: #007bff;
        border: none;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-success {
        border-radius: 10px;
        padding: 10px;
        font-size: 1rem;
        background-color: #28a745;
        border: none;
        color: #fff;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-outline-danger {
        border-radius: 10px;
        padding: 10px;
        font-size: 1rem;
        border: 1px solid #dc3545;
        color: #dc3545;
        background-color: transparent;
    }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: #fff;
        }

    .table {
        background-color: rgba(0, 0, 0, 0.8); /* Dark background for table */
        color: #fff;
    }

        .table th,
        .table td {
            text-align: center;
        }

    .table-dark th {
        background-color: #343a40;
        color: #fff;
    }

    .head-bar {
        background-color: #2248F0;
        color: white;
        text-align: center;
        padding: 10px;
        font-weight: bold; /* Make text bold */
        position: fixed; /* Fix the position */
        top: 0; /* Position at the top */
        left: 0; /* Align to the left */
        right: 0; /* Align to the right */
        z-index: 1000; /* Ensure it stays above other content */
    }
</style>

<body>
    <div class="head-bar">
        Add Teacher Account
    </div>
    <div class="form-container">
        <form action="/home/teacher" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" id="name" class="form-control" placeholder="Enter Name" asp-for="tName">
                <span asp-validation-for="tName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="surname">Surname</label>
                <input type="text" id="surname" class="form-control" placeholder="Enter Surname" asp-for="tSurname">
                <span asp-validation-for="tSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="formClass">Form Class</label>
                <select typeof="text" class="form-control" id="formClass" asp-for="tFormClass">
                    <option value="">-- Select Form Class --</option>
                    <option value="8A">8A</option>
                    <option value="8B">8B</option>
                    <option value="8C">8C</option>
                    <option value="8D">8D</option>
                    <option value="9A">9A</option>
                    <option value="9B">9B</option>
                    <option value="9C">9C</option>
                    <option value="9D">9D</option>
                    <option value="10A">10A</option>
                    <option value="10B">10B</option>
                    <option value="10C">10C</option>
                    <option value="10D">10D</option>
                    <option value="11A">11A</option>
                    <option value="11B">11B</option>
                    <option value="11C">11C</option>
                    <option value="11D">11D</option>
                    <option value="12A">12A</option>
                    <option value="12B">12B</option>
                    <option value="12C">12C</option>
                    <option value="12D">12D</option>
                </select>
                <span asp-validation-for="tFormClass" class="text-danger"></span>
            </div>
            <div>
                <input type="hidden" value=@ViewBag.file2 asp-for="acID" />
            </div>
            <button type="submit" class="btn btn-primary">Submit and go to next page</button>
        </form>
    </div>
    
</body>