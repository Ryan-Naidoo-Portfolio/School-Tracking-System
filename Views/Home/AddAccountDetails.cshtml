@model test_Data.Models.AccountModel
@{
    ViewData["Title"] = "AddAccountDetails";
}

@{
    string filePath = @"C:\Users\naido\Desktop\teli project\position.txt";
    string acPosition = System.IO.File.ReadAllText(filePath);
}

<style>
    body {
        background-color: white;
        background-size: cover;
        background-position: center center;
        background-repeat: no-repeat;
        height: 100vh;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    .container {
        max-width: 500px;
        margin: 0 auto;
        padding-top: 50px;
    }

    .form-container {
        display: flex; /* Enables Flexbox */
        justify-content: center; /* Centers horizontally */
        align-items: center; /* Centers vertically */
        height: auto; /* Full height to center vertically */
        padding-top: 60px;
    }

    .AuthForm {
        padding: 30px;
        max-width: 500px;
        background-color: #2189F0;
        align-content: center;
        border-radius: 15px;
        border: 2px solid #000;
        background-color: transparent;
        backdrop-filter: blur(30px);
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 100%; /* Make sure it adapts to smaller screens */
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 10px;
        padding: 10px; /* Added padding for better spacing */
    }

    .btn-block {
        width: 100%;
        border-radius: 10px;
    }

    label {
        font-weight: bold;
    }

    .table-dark {
        background-color: rgba(0, 0, 0, 0.75); /* Dark background for table */
        color: white;
        margin-top: 20px;
    }

        .table-dark th,
        .table-dark td {
            text-align: center;
        }

        .table-dark th {
            background-color: #343a40;
            color: #fff;
        }

    .head-bar {
        background-color: #2248F0;
        color: white;
        text-align: center;
        padding: 10px;
        font-weight: bold; /* Make text bold */
        position: fixed; /* Fix the position */
        top: 0; /* Position at the top */
        left: 0; /* Align to the left */
        right: 0; /* Align to the right */
        z-index: 1000; /* Ensure it stays above other content */
    }
</style>

<body>
    <div class="head-bar">
        Add Additional Details
    </div>
    <div class="form-container">
        <form action="/home/account" method="post" class="AuthForm">
            <div class="form-group">
                <label for="username">Add Account Username</label>
                <input type="text" id="username" class="form-control" placeholder="Enter Account Username" asp-for="acUsername">
                <span asp-validation-for="acUsername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="password">Add Account Password</label>
                <input type="text" id="password" class="form-control" placeholder="Enter Account Password" asp-for="acPassword">
                <span asp-validation-for="acPassword" class="text-danger"></span>
            </div>
            <div>
                <input type="hidden" value="@acPosition" asp-for="acPosition" />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>
