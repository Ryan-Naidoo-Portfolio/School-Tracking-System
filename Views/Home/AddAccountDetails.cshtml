@model test_Data.Models.AccountModel
@{
    ViewData["Title"] = "AddAccountDetails";
}

<style>
    body {
        background-image: url('https://publichealthinsider.com/wp-content/uploads/2020/08/shutterstock_534419863-1555909105-1598646752360-1024x559.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        height: 100vh;
        font-family: Arial, sans-serif;
    }

    .form-container {
        max-width: 500px;
        width: 100%;
        padding: 30px;
        background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent white background */
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.3); /* Subtle shadow */
        backdrop-filter: blur(10px); /* Frosted glass effect */
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 10px;
        border: 1px solid #ccc;
        font-size: 1rem;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .btn-primary {
        width: 100%;
        border-radius: 10px;
        padding: 10px;
        font-size: 1rem;
        background-color: #007bff;
        border: none;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-success {
        border-radius: 10px;
        padding: 10px;
        font-size: 1rem;
        background-color: #28a745;
        border: none;
        color: #fff;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-outline-danger {
        border-radius: 10px;
        padding: 10px;
        font-size: 1rem;
        border: 1px solid #dc3545;
        color: #dc3545;
        background-color: transparent;
    }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: #fff;
        }

    .table-dark {
        background-color: rgba(0, 0, 0, 0.75); /* Dark background for table */
        color: white;
        margin-top: 20px;
    }

        .table-dark th,
        .table-dark td {
            text-align: center;
        }

        .table-dark th {
            background-color: #343a40;
            color: #fff;
        }

    label {
        font-weight: bold;
        font-size: 1rem;
        margin-bottom: 5px;
        display: block;
    }
</style>

<body>
    <div class="form-container">
        <form action="/home/account" method="post">
            <div class="form-group">
                <label for="username">Add Account Username</label>
                <input type="text" id="username" class="form-control" placeholder="Enter Teachers Username" asp-for="acUsername">
                <span asp-validation-for="acUsername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="password">Add Account Password</label>
                <input type="text" id="password" class="form-control" placeholder="Enter Teachers Password" asp-for="acPassword">
                <span asp-validation-for="acPassword" class="text-danger"></span>
            </div>
            <!--
            <div class="form-group">
                
                <label for="position">Add Account Position</label>
                <select id="position" class="form-control" asp-for="acPosition">
                    <option value="" disabled selected>Select your position</option>
                    <option value="Parent">Parent</option>
                    <option value="Teacher">Teacher</option>
                    <option value="Admin">Admin</option>
                </select>
                <span asp-validation-for="acPosition" class="text-danger"></span>
            </div>
    -->
            <div>
                <input type="hidden" value=@ViewBag.position asp-for="acPosition" />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

</body>