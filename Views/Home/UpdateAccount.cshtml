@model test_Data.Models.AccountModel
@{
    ViewData["Title"] = "Update Account";
    AccountModel user = TempData["userTemp"] as AccountModel;
}

<style>
    body {
        background-color: white;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    .form-container {
        max-width: 500px;
        width: 100%;
        padding: 30px;
        background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent white background */
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.3); /* Subtle shadow */
        backdrop-filter: blur(10px); /* Frosted glass effect */
        margin: 20px auto;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 10px;
        border: 1px solid #ccc;
        font-size: 1rem;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .btn-primary {
        width: 100%;
        border-radius: 10px;
        padding: 10px;
        font-size: 1rem;
        background-color: #007bff;
        border: none;
        color: #fff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    label {
        font-weight: bold;
        font-size: 1rem;
        margin-bottom: 5px;
        display: block;
    }

    .text-danger {
        font-size: 12px;
        color: #dc3545;
        margin-top: 5px;
        display: block;
    }

    .head-bar {
        background-color: #2248F0;
        color: white;
        text-align: center;
        padding: 10px;
        font-weight: bold; /* Make text bold */
        position: fixed; /* Fix the position */
        top: 0; /* Position at the top */
        left: 0; /* Align to the left */
        right: 0; /* Align to the right */
        z-index: 1000; /* Ensure it stays above other content */
    }
</style>

<body>
    <div class="head-bar">
        Admin: Update Accounts
    </div>
    <div class="form-container">
        <h1>Update Account</h1>
        <form action="/home/UpdateAccountFinal" method="post">
            <input type="hidden" asp-for="acID" value="@user.acID" />
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" class="form-control" asp-for="acUsername" value="@user.acUsername">
                <span asp-validation-for="acUsername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="text" id="password" class="form-control" asp-for="acPassword" value="@user.acPassword">
                <span asp-validation-for="acPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="position">Position</label>
                <input type="text" id="position" class="form-control" asp-for="acPosition" value="@user.acPosition">
                <span asp-validation-for="acPosition" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>
