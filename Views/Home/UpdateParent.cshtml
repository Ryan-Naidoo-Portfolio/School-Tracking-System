@model test_Data.Models.ParentModel
@{
    ViewData["Title"] = "Update Parent";
    ParentModel user = TempData["userTemp"] as ParentModel;
}

<style>
    body {
        background-color: white;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        margin: 0;
        font-family: Arial, sans-serif;
    }

    .form-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        background-color: rgba(255, 255, 255, 0.9); /* Semi-transparent white background */
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.3); /* Subtle shadow */
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 10px;
        border: 1px solid #ccc;
        font-size: 1rem;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .btn-primary {
        width: 100%;
        border-radius: 10px;
        padding: 10px;
        font-size: 1rem;
        background-color: #007bff;
        border: none;
        color: #fff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    label {
        font-weight: bold;
    }

    .head-bar {
        background-color: #2248F0;
        color: white;
        text-align: center;
        padding: 10px;
        font-weight: bold; /* Make text bold */
        position: fixed; /* Fix the position */
        top: 0; /* Position at the top */
        left: 0; /* Align to the left */
        right: 0; /* Align to the right */
        z-index: 1000; /* Ensure it stays above other content */
    }
</style>

<body>
    <div class="head-bar">
        Update Parents
    </div>
    <div class="form-container">
        <h1>Update Parent</h1>
        <form action="/home/UpdateParentFinal" method="post">
            <input type="hidden" asp-for="pID" value="@user.pID" />

            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" id="name" class="form-control" placeholder="Enter Name" asp-for="pName" value="@user.pName" />
            </div>

            <div class="form-group">
                <label for="surname">Surname</label>
                <input type="text" id="surname" class="form-control" placeholder="Enter Surname" asp-for="pSurname" value="@user.pSurname" />
            </div>

            <div class="form-group">
                <label for="phoneNumber">Phone Number</label>
                <input type="tel" id="phoneNumber" class="form-control" placeholder="Enter Phone Number" asp-for="pPhoneNumber" value="@user.pPhoneNumber" />
            </div>

            <div class="form-group">
                <label for="spouseName">Spouse Name</label>
                <input type="text" id="spouseName" class="form-control" placeholder="Enter Spouse Name" asp-for="pSpouseName" value="@user.pSpouseName" />
            </div>

            <div class="form-group">
                <label for="spousePhoneNumber">Spouse Phone Number</label>
                <input type="tel" id="spousePhoneNumber" class="form-control" placeholder="Enter Spouse Phone Number" asp-for="pSpousePhoneNumber" value="@user.pSpousePhoneNumber" />
            </div>

            <div class="form-group">
                <label for="emergencyContactName">Emergency Contact Name</label>
                <input type="text" id="emergencyContactName" class="form-control" placeholder="Enter Emergency Contact Name" asp-for="pEmergencyContactName" value="@user.pEmergencyContactName" />
            </div>

            <div class="form-group">
                <label for="emergencyContactPhoneNumber">Emergency Contact Phone Number</label>
                <input type="tel" id="emergencyPhoneNumber" class="form-control" placeholder="Enter Emergency Phone Number" asp-for="pEmergencyPhoneNumber" value="@user.pEmergencyPhoneNumber" />
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>
