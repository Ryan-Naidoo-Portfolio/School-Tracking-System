@model test_Data.Models.ParentModel
@{
    ViewData["Title"] = "UpdateParent";
    ParentModel user = TempData["userTemp"] as ParentModel;
}
<h1>Update User</h1>
<div class="container">
    <form action="/home/UpdateParentFinal" method="post">
        <input type="hidden" asp-for="Id" value="@user.Id"/>

        <div class="form-group">
            <label>Name</label>
            <input type="text" placeholder="Enter Name" asp-for="Name" value = "@user.Name">
        </div>

        <div class="form-group">
            <label>Surname</label>
            <input type="text" asp-for="Surname" value="@user.Surname">           
        </div>
        <div class="form-group">
            <label>Phone Number</label>
            <input type="tel" placeholder="Enter Phone Number" asp-for="PhoneNumber" value = "@user.PhoneNumber">
        </div>

        <div class="form-group">
            <label>Spouse Name</label>
            <input type="text" asp-for="SpouseName" value="@user.SpouseName">           
        </div>
        <div class="form-group">
            <label>Spouse Phone Number</label>
            <input type="tel" placeholder="Enter Spouse Phone Number" asp-for="SpousePhoneNumber" value = "@user.SpousePhoneNumber">
        </div>

        <div class="form-group">
            <label>Emergency Contact Name</label>
            <input type="text" asp-for="EmergencyContactName" value="@user.EmergencyContactName">           
        </div>
        <div class="form-group">
            <label>Emergency Contact Phone Number</label>
            <input type="tel" asp-for="EmergencyContactPhoneNumber" value="@user.EmergencyContactPhoneNumber">           
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>