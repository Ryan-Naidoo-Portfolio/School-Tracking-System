@model test_Data.Models.ChildModel
@{
    ViewData["Title"] = "Child";

}
@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        <strong>Success!</strong> @TempData["AlertMessage"]
    </div>
}
<style>
    body {
    background-color: white;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    height: 100vh;
    margin: 0;
    font-family: Arial, sans-serif;
    }

    .Form {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        background-color: rgba(255, 255, 255, 0.9); /* Semi-transparent white background */
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.3); /* Subtle shadow */
        backdrop-filter: blur(10px); /* Frosted glass effect */
        margin: 20px auto;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 10px;
        border: 1px solid #ccc;
        font-size: 1rem;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .btn-primary {
        width: 100%;
        border-radius: 10px;
        padding: 10px;
        font-size: 1rem;
        background-color: #007bff;
        border: none;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .table-dark {
        margin-top: 20px;
        background-color: rgba(0, 0, 0, 0.75);
        color: white;
    }

        .table-dark th,
        .table-dark td {
            text-align: center;
        }

    .btn-outline-danger {
        border: 1px solid #dc3545;
        color: #dc3545;
        margin-top: 5px;
        display: block;
    }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: white;
        }

    .head-bar {
        background-color: #2248F0;
        color: white;
        text-align: center;
        padding: 10px;
        font-weight: bold;
        left: 0; /* Align to the left */
        margin-top: -17px;
        right: 0; /* Align to the right */
        z-index: 1000; /* Ensure it stays above other content */
    }
</style>

<body>
    <div class="container">
        <div class="Form">
            <form method="get" action="@Url.Action("Search", "Home")">
                <div class="form-group">
                    <label for="searchName">Search by Name:</label>
                    <input type="text" name="searchName" class="form-control" id="searchName" placeholder="Enter name">
                </div>
                <button type="submit" class="btn btn-primary">Search</button>
            </form>

            <form method="get" action="@Url.Action("FormClass", "Home")">
                <div class="form-group">
                    <label for="searchformclass">Search by FormClass:</label>
                    <select name="searchFormClass" class="form-control" id="searchFormClass">
                        <option value="">-- Select Form Class --</option>
                        <option value="8A">8A</option>
                        <option value="8B">8B</option>
                        <option value="8C">8C</option>
                        <option value="8D">8D</option>
                        <option value="9A">9A</option>
                        <option value="9B">9B</option>
                        <option value="9C">9C</option>
                        <option value="9D">9D</option>
                        <option value="10A">10A</option>
                        <option value="10B">10B</option>
                        <option value="10C">10C</option>
                        <option value="10D">10D</option>
                        <option value="11A">11A</option>
                        <option value="11B">11B</option>
                        <option value="11C">11C</option>
                        <option value="11D">11D</option>
                        <option value="12A">12A</option>
                        <option value="12B">12B</option>
                        <option value="12C">12C</option>
                        <option value="12D">12D</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Search</button>
            </form>

            <form method="get" action="@Url.Action("filter", "Home")">
                <div class="form-group">
                    <label for="presentFilter">Filter by Present:</label>
                    <select name="presentFilter" class="form-control" id="presentFilter">
                        <option value="">Select</option>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Filter</button>
            </form>
        </div>


      

        <table class="table table-dark">
    
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Surname</th>
                    <th scope="col">TimeIn</th>
                    <th scope="col">TimeOut</th>
                    <th scope="col">DateScan</th>
                    <th scope="col">FormClass</th>
                    <th scope="col">Present</th>
                    <th scope="col">Message</th>
                    

                </tr>
            </thead>
            <tbody>
                @foreach (var qr in ViewBag.users)
                {
                    <tr>
                        <td>@qr.sID</td>
                        <td>@qr.sName</td>
                        <td>@qr.sSurname</td>
                        <td>@qr.TimeIn</td>
                        <td>@qr.TimeOut</td>
                        <td>@qr.DateScan</td>
                        <td>@qr.sFormClass</td>
                        <td>@qr.Present</td>
                      
                        <td>
                            <button type="button" class="btn btn-info" onclick="redirectToNotificationPage('@qr.pID')">Message</button>

                           
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>
    <script>
        function redirectToNotificationPage(pID) {
            // Redirect to the Notification page with pID in the query string
            window.location.href = '@Url.Action("Notification")' + '?pid=' + pID;
        }
    </script>
</body>
