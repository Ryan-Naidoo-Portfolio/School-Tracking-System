@model test_Data.Models.AttendanceModel
@{
    ViewData["Title"] = "Attendance";


}
<style>
    body {
    background-color: white;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    height: 100vh;
    margin: 0;
    font-family: Arial, sans-serif;
    }

    .Form {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        background-color: rgba(255, 255, 255, 0.9); /* Semi-transparent white background */
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.3); /* Subtle shadow */
        backdrop-filter: blur(10px); /* Frosted glass effect */
        margin: 20px auto;
    }

    .form-group {
    margin-bottom: 20px;
    }

    .form-control {
    width: 100%;
    padding: 10px;
    border-radius: 10px;
    border: 1px solid #ccc;
    font-size: 1rem;
    }

    .form-control:focus {
    border-color: #007bff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .btn-primary {
    width: 100%;
    border-radius: 10px;
    padding: 10px;
    font-size: 1rem;
    background-color: #007bff;
    border: none;
    color: #fff;
    }

    .btn-primary:hover {
    background-color: #0056b3;
    }

    .table-dark {
        margin-top: 20px;
        background-color: rgba(0, 0, 0, 0.75);
        color: white;
    }

        .table-dark th,
        .table-dark td {
            text-align: center;
        }

    .btn-outline-danger {
        border: 1px solid #dc3545;
    color: #dc3545;
    margin-top: 5px;
    display: block;
    }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: white;
        }

    .head-bar {
        background-color: #2248F0;
        color: white;
        text-align: center;
        padding: 10px;
        font-weight: bold;
        left: 0; /* Align to the left */
        margin-top: -17px;
        right: 0; /* Align to the right */
        z-index: 1000; /* Ensure it stays above other content */
    }
</style>

<body>
    <div class="head-bar">
        Teacher: Search
    </div>
    <div class="container">
      
        <form action="/Home/SearchAttendance" method="post" class="SearchBox">
            <div class="form-group">
                <label for="search">Search</label>
                <input type="text" id="search" name="searchattendance" class="form-control" />
    </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
       
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">TimeIn</th>
                        <th scope="col">TimeOut</th>
                        <th scope="col">Date</th>
                        <th scope="col">Present</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var attendance in ViewBag.users)
                    {
                        <tr>
                            <td>@attendance.atTimeIn</td>
                            <td>@attendance.atTimeOut</td>
                            <td>@attendance.atDate</td>
                            <td>@attendance.atPresent</td>
                        </tr>
    }
                </tbody>
            </table>
        
        
    </div>
</body>
