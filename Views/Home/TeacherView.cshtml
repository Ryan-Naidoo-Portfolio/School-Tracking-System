@model test_Data.Models.AccountModel
@{
    ViewData["Title"] = "TeacherView";

}

<style>
    body {
    background-image: url('https://publichealthinsider.com/wp-content/uploads/2020/08/shutterstock_534419863-1555909105-1598646752360-1024x559.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    height: 100vh;
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
    }

    .form-container {
    max-width: 500px;
    width: 100%;
    padding: 30px;
    background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent white background */
    border-radius: 15px;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.3); /* Subtle shadow */
    backdrop-filter: blur(10px); /* Frosted glass effect */
    margin: 20px auto;
    }

    .form-group {
    margin-bottom: 20px;
    }

    .form-control {
    width: 100%;
    padding: 10px;
    border-radius: 10px;
    border: 1px solid #ccc;
    font-size: 1rem;
    }

    .form-control:focus {
    border-color: #007bff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .btn-primary {
    width: 100%;
    border-radius: 10px;
    padding: 10px;
    font-size: 1rem;
    background-color: #007bff;
    border: none;
    color: #fff;
    }

    .btn-primary:hover {
    background-color: #0056b3;
    }

    label {
    font-weight: bold;
    font-size: 1rem;
    margin-bottom: 5px;
    display: block;
    }

    .text-danger {
    font-size: 12px;
    color: #dc3545;
    margin-top: 5px;
    display: block;
    }
</style>

<body>
    @foreach (var user in ViewBag.users)
    {
        <div class="form-container">
            <h1>Update Account</h1>
            <div class="form-group">
                <label for="position">Position</label>
                <input type="text" id="position" class="form-control" asp-for="Position" value=@user.Username>
            </div>
    </div>
    }
</body>
