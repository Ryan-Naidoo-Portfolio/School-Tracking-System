        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            height: 100vh;
            background-color: #343a40;
            padding-top: 20px;
            transition: all 0.3s ease;
            z-index: 1000;
            transform: translateX(-100%);
        }

        .sidebar.expanded {
            transform: translateX(0);
        }

        .sidebar .nav-link {
            color: #fff;
            padding: 15px;
            text-align: left;
            white-space: nowrap;
        }

        .sidebar .nav-link:hover {
            background-color: #495057;
        }

        .sidebar-toggle {
            position: fixed;
            top: 20px;
            left: 20px;
            background-color: #343a40;
            border: none;
            color: white;
            padding: 10px 15px;
            cursor: pointer;
            z-index: 1001;
            transition: transform 0.3s ease;
        }

        .sidebar.expanded + .sidebar-toggle {
            transform: translateX(250px);
        }

        .main-content {
            margin-left: 0;
            padding-top: 20px;
            transition: margin-left 0.3s ease;
        }

        .main-content.expanded {
            margin-left: 250px;
        }

        /* Custom CSS for the navbar-toggler-icon */
        .navbar-toggler-icon {
            display: inline-block;
            width: 30px;
            height: 3px;
            background-color: white; /* Change the color of the bars */
            position: relative;
            transition: all 0.3s ease;
        }

            .navbar-toggler-icon::before,
            .navbar-toggler-icon::after {
                content: '';
                width: 30px;
                height: 3px;
                background-color: white; /* Match the color of the main bar */
                position: absolute;
                left: 0;
                transition: all 0.3s ease;
            }

            /* Position the top bar */
            .navbar-toggler-icon::before {
                top: -10px;
            }

            /* Position the bottom bar */
            .navbar-toggler-icon::after {
                top: 10px;
            }

        /* Optional: Add an animation effect when the navbar is expanded */
        .navbar-toggler.collapsed .navbar-toggler-icon {
            transform: rotate(0deg);
        }

        .navbar-toggler:not(.collapsed) .navbar-toggler-icon {
            transform: rotate(45deg);
        }

            .navbar-toggler:not(.collapsed) .navbar-toggler-icon::before {
                transform: rotate(-90deg);
                top: 0;
            }

            .navbar-toggler:not(.collapsed) .navbar-toggler-icon::after {
                transform: rotate(-90deg);
                top: 0;
            }

    </style>
</head>

